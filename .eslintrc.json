{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb"
    ],
    "parser":
        "babel-eslint"
    ,
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "no-alert": "off",
      "jsx-a11y": "off",
      "no-shadow": "off",
      "max-len": "off",
      "no-param-reassign": "off",
      "no-console": "off",
      "no-use-before-define": "off",
      "no-nested-ternary": "off",
      "linebreak-style": "off",
      "jsx-a11y/no-noninteractive-element-interactions": "off",
      "jsx-a11y/no-noninteractive-element-to-interactive-role": "off",
      "jsx-a11y/click-events-have-key-events": "off",
      "global-require": "off",
      "react/jsx-no-props-spreading": "never",
      "arrow-body-style" : ["error", "as-needed"],
      "eslint/consistent-return": "never",
      "jsx-a11y/media-has-caption": "off"
    }
}